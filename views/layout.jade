!!! 5
html
  head
    meta(charset='utf8')
    - if (req.url == '/')
      title #{site.title}
    - else
      title #{site.title}: #{page.title}
    link(rel='shortcut icon', href='/favicon.ico')
    link(rel='stylesheet', type='text/css', href='/style/arescentral.css')
    link(rel='stylesheet', type='text/css', href='http://fonts.googleapis.com/css?family=Droid+Sans|Droid+Sans+Mono')
    - if (page.alternate)
      link(rel='alternate', type='application/atom+xml', title=site.title, href=page.alternate)
    script(src='/scripts/mootools-core-1.3.js')
    script(src='/scripts/mootools-more.js')
    script(src='/scripts/arescentral.js')
  body
    #header
      h1
        a(href: '/')= site.title
      ul.navigation
        - each url, name in site.navigation
          - if (url == req.url)
            li.current
              a(href=url)= name
          - else
            li
              a(href=url)= name
    #main
      != body
      #footer
